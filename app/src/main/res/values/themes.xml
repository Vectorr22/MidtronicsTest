<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MidtronicsTest" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.MyApp.Splash" parent="Theme.SplashScreen">
        <!-- Background color -->
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <!-- Your app logo -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo</item>
        <!-- Animation duration -->
        <item name="windowSplashScreenAnimationDuration">500</item>
        <!-- Optional: remove status bar until transition -->
        <item name="postSplashScreenTheme">@style/Theme.MidtronicsTest</item>
    </style>
</resources>